<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/br_tv_rn"
                android:layout_weight="1"
                android:text="Referece "
                android:textColor="#424242"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/br_tv_iti"
                android:layout_weight="1"
                android:text="itinerary"
                android:textColor="#424242"/>


        </LinearLayout>


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/br_btn_checkin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:background="#3cba54"
            android:text="Check In" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/br_ll_gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="100dp"

        android:visibility="gone" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/br_tv_dep"
            android:text="Departs:"
            android:layout_weight="1"
            android:textColor="#424242"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/br_tv_ari"
            android:layout_weight="1"
            android:textColor="#424242"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/br_tv_passport"
            android:layout_weight="1"
            android:textColor="#424242"/>

    </LinearLayout>

</LinearLayout>





