<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_blue"
    tools:context="zhang.zhixuan.mobileapp_airline.RegisterPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/registration_background"
        android:padding="25dp"
        android:id="@+id/register_rl_white">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:maxLines="1"
            app:met_primaryColor= "#f4c20d"
            android:textSize="15sp"
            android:id="@+id/register_et_email"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Email"
            app:met_underlineColor= "#1E88E5"
            android:inputType="textEmailAddress"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="6"
            app:met_textColorHint = "#1E88E5"
            android:backgroundTint="#1E88E5"
            app:met_errorColor="#db3236"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:maxLines="1"
            app:met_primaryColor= "#f4c20d"
            android:textSize="15sp"
            android:id="@+id/register_et_username"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "User Name"
            app:met_underlineColor= "#1E88E5"
            app:met_minCharacters ="6"
            app:met_maxCharacters = "20"
            app:met_textColorHint = "#1E88E5"
            android:backgroundTint="#1E88E5"
            app:met_errorColor="#db3236"
            android:layout_below="@+id/register_et_email"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:id="@+id/register_et_password"
            android:inputType="textPassword"
            app:met_primaryColor= "#f4c20d"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Password"
            android:hint="Password"
            app:met_underlineColor= "#1E88E5"
            android:backgroundTint="#1E88E5"
            app:met_textColorHint = "#1E88E5"
            app:met_minCharacters ="6"
            app:met_maxCharacters = "20"
            app:met_errorColor="#db3236"
            android:layout_below="@+id/register_et_username"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="15sp"
            android:id="@+id/register_et_confirmPassword"
            android:inputType="textPassword"
            app:met_primaryColor= "#f4c20d"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Confirm Password"
            android:hint="Confirm Password"
            app:met_underlineColor= "#1E88E5"
            android:backgroundTint="#1E88E5"
            app:met_textColorHint = "#1E88E5"
            app:met_minCharacters ="6"
            app:met_maxCharacters = "20"
            app:met_errorColor="#db3236"
            android:layout_below="@+id/register_et_password"
            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/register_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="REGISTER"
            android:layout_below="@+id/register_et_confirmPassword"/>

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/register_btn_forgetPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#db3236"
            android:text="Forget Password ?"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:onClick="login_register"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_below="@id/register_btn"/>

    </RelativeLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/main_float_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account"
        app:fab_colorNormal="#3cba54"
        app:fab_colorPressed="#3cba54"
        app:fab_colorRipple="#3cba54"
        app:fab_shadowColor="#66000000"
        app:fab_shadowRadius="4dp"
        app:fab_shadowXOffset="1dp"
        app:fab_shadowYOffset="3dp"
        app:fab_showShadow="true"
        app:fab_size="normal"
        fab:fab_label="Account"
        android:clickable="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>
