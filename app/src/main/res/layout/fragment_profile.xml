        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="First Name: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_fn"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "First Name: "
            app:met_underlineColor= "#3cba54"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_tv_username"
            android:layout_marginTop="20dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_sn"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Last Name: "
            app:met_underlineColor= "#3cba54"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_fn"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Address: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_ad"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Address: "
            app:met_underlineColor= "#3cba54"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_sn"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Country: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_co"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Country: "
            app:met_underlineColor= "#3cba54"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_ad"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="City: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_ci"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "City: "
            app:met_underlineColor= "#3cba54"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_co"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="ZipCode: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_zp"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "ipCode: "
            app:met_underlineColor= "#3cba54"
            android:inputType="number"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_ci"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Contact: "
            android:maxLines="1"
            app:met_primaryColor= "#3cba54"
            android:textSize="15sp"
            android:id="@+id/pf_et_cn"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText = "Contact: "
            app:met_underlineColor= "#3cba54"
            android:inputType="phone"
            app:met_maxCharacters = "30"
            app:met_minCharacters ="1"
            app:met_textColorHint = "#424242"
            android:backgroundTint="#3cba54"
            app:met_errorColor="#424242"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/pf_et_zp"

            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/pf_btn_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#3cba54"
            android:text="UPDATE"
            android:layout_below="@+id/pf_et_zp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</LinearLayout>
